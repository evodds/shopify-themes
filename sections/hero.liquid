<section id="hero" class="hero shell">
  <div class="hero__content">
    {% if section.settings.tag_text != blank %}
      <div class="hero__tag">
        {% if section.settings.tag_icon != blank %}
          <span class="icon" aria-hidden="true">{{ section.settings.tag_icon }}</span>
        {% endif %}
        <span>{{ section.settings.tag_text }}</span>
      </div>
    {% endif %}

    <div class="hero__copy">
      <h1>
        {{ section.settings.heading | escape }}
        {% if section.settings.heading_highlight != blank %}
          <span>{{ section.settings.heading_highlight }}</span>
        {% endif %}
      </h1>
      {% if section.settings.subheading != blank %}
        <p>{{ section.settings.subheading }}</p>
      {% endif %}
    </div>

    <div class="hero__ctas">
      {% if section.settings.primary_label != blank %}
        <a class="btn btn-primary" href="{{ section.settings.primary_link | default: '#' }}">
          {{ section.settings.primary_label }}
        </a>
      {% endif %}
      {% if section.settings.secondary_label != blank %}
        <a class="btn btn-outline" href="{{ section.settings.secondary_link | default: '#' }}">
          {{ section.settings.secondary_label }}
        </a>
      {% endif %}
    </div>

    <dl class="hero__stats">
      {% assign stats = (1..3) %}
      {% for i in stats %}
        {% assign value_key = 'stat' | append: i | append: '_value' %}
        {% assign label_key = 'stat' | append: i | append: '_label' %}
        {% assign stat_value = section.settings[value_key] %}
        {% assign stat_label = section.settings[label_key] %}
        {% if stat_value != blank or stat_label != blank %}
          <div>
            {% if stat_value != blank %}<dt>{{ stat_value }}</dt>{% endif %}
            {% if stat_label != blank %}<dd>{{ stat_label }}</dd>{% endif %}
          </div>
        {% endif %}
      {% endfor %}
    </dl>
  </div>

  <div class="hero__visual">
    <figure>
      {% if section.settings.image != blank %}
        {{ section.settings.image | image_url: width: 900 | image_tag: loading: 'lazy', alt: section.settings.image_alt, class: 'hero__image' }}
      {% else %}
        <img
          src="https://images.unsplash.com/photo-1483985988355-763728e1935b?auto=format&fit=crop&w=900&q=80"
          alt="{{ section.settings.image_alt | default: 'Kawaii fashion model holding shopping bags' }}"
          loading="lazy"
          class="hero__image"
        >
      {% endif %}
      {% if section.settings.badge_label != blank or section.settings.badge_value != blank %}
        <figcaption class="hero__badge">
          {% if section.settings.badge_label != blank %}<p>{{ section.settings.badge_label }}</p>{% endif %}
          {% if section.settings.badge_value != blank %}<strong>{{ section.settings.badge_value }}</strong>{% endif %}
        </figcaption>
      {% endif %}
    </figure>
  </div>
</section>

